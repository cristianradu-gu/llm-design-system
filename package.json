{
  "name": "llm-design-system",
  "version": "0.1.0",
  "private": true,
  "description": "Design system for SaaS energy industry application, optimized for LLM accessibility",
  "scripts": {
    "dev": "pnpm --filter docs dev",
    "build": "pnpm --filter tokens build && pnpm --filter ui build",
    "build:tokens": "pnpm --filter tokens build",
    "build:ui": "pnpm --filter ui build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "radix-ui",
    "tailwind",
    "storybook"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  }
}

